%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title MOC Nashik
    = favicon_link_tag 'mocf01.png'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body.hold-transition.login-page
    = bootstrap_flash
    .login-box{:style=>"width: 700px;"}
      .login-logo
        = link_to root_path do
          = image_tag "moc_logo.png"
      .login-box-body
        = form_for(User.new, :id => 'new_user', :class => 'new_user', url: registration_path(User.new)) do |f|
          .form-group.col-md-6
            %label First Name
            = f.text_field :first_name, autofocus: true, class: 'form-control',
              placeholder: 'First Name'
          .form-group.col-md-6
            %label Last Name
            = f.text_field :last_name, class: 'form-control',
              placeholder: 'Last Name'
          .form-group.col-md-6
            %label Email
            = f.email_field :email, class: 'form-control',
              placeholder: 'somename@domain.com'
          .form-group.col-md-6
            %label Mobile no
            = f.text_field :mobile_number, class: 'form-control', placeholder: 'Number'
          .form-group.col-md-6
            %label Password
            = f.password_field :password, class: 'form-control', placeholder: 'Password'
          / .form-group.col-md-6
          /   %label Password
          /   = f.select :role_id, Role.all.collect {|b| [ b.name, b.id ] }, {include_blank: "Role"}, class: 'form-control', required: true
          / .form-group.col-md-6
          /   %label Confrim Password
          /   = f.select :branch_id, Branch.all.collect {|b| [ b.name, b.id ] }, {include_blank: "Branch Name"}, class: 'form-control', required: true  
          .row
            .col-xs-8
            .col-xs-4
              %button.btn.btn-primary.btn-block.btn-flat{:type => "submit"} Register
        %button.btn.btn-primary.btn-block.btn-flat
          = link_to 'Login', new_user_session_path, {:style=> "color: #f5f5f5;"}
    %footer.main-footer{style: "color: #ffbf1b"}
      %strong
        Copyright Â© #{Date.today.year}
        = succeed "." do
          %a{:href => 'http://www.mocrock.com/'} mocrock
      All rights reserved.

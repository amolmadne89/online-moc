%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title MOC Nashik
    = favicon_link_tag 'small-logo.png'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body.hold-transition.login-page
    = bootstrap_flash
    .login-box
      .login-logo
        = link_to root_path do
          = image_tag "moc_logo.png"
      .login-box-body
        = form_for(User.new, :id => 'new_user', :class => 'new_user', url: registration_path(User.new)) do |f|
          .form-group.col-md-6
            %label First Name
            %input.form-control{:placeholder => "Type here..", :type => "text"}/
          .form-group.col-md-6
            %label Last Name
            %input.form-control{:placeholder => "Type here..", :type => "text"}/
          .form-group.col-md-6
            %label Email
            %input.form-control{:placeholder => "Type here..", :type => "email"}/
          .form-group.col-md-6
            %label Mobile no
            %input.form-control{:placeholder => "Type here..", :type => "text"}/
          .form-group.col-md-6
            %label Password
            %input.form-control{:placeholder => "Type here..", :type => "text"}/
          .form-group.col-md-6
            %label Confrim Password
            %input.form-control{:placeholder => "Type here..", :type => "text"}/
          .row
            .col-xs-8
            .col-xs-4
              %button.btn.btn-primary.btn-block.btn-flat{:type => "submit"} Register
        %button.btn.btn-primary.btn-block.btn-flat
          = link_to 'Login', new_user_session_path, {:style=> "color: #f5f5f5;"}
    %footer.main-footer{style: "color: #ffbf1b"}
      %strong
        Copyright Â© #{Date.today.year}
        = succeed "." do
          %a{:href => 'http://www.mocrock.com/'} mocrock
      All rights reserved.

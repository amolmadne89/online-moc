%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title MOC Nashik
    = favicon_link_tag 'mocf01.png'
    = stylesheet_link_tag    'custom_application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'custom_application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body.hold-transition.login-page
    = bootstrap_flash
    .login-box{:style=>"width: 500px;"}
      .login-logo
        = link_to root_path do
          = image_tag "moc_logo.png"
      .login-box-body
        = form_for(User.new, :id => 'new_user', :class => 'new_user', url: session_path(User.new)) do |f|
          .form-group.has-feedback
            = f.email_field :email, autofocus: true, class: 'form-control',
              placeholder: 'somename@domain.com'
            %span.glyphicon.glyphicon-envelope.form-control-feedback
          .form-group.has-feedback  
            = f.select :branch_id, Branch.all.collect {|b| [ b.name, b.id ] }, {include_blank: "Branch Name"}, class: 'form-control', required: true
          .form-group.has-feedback
            = f.password_field :password, autocomplete: 'off', class: 'form-control',
                placeholder: '••••••••'
            %span.glyphicon.glyphicon-lock.form-control-feedback
          - if devise_mapping.rememberable?
            .row
              .col-xs-12
                %button.btn.btn-primary.btn-block.btn-flat.btn-login{:type => "submit"} Login
        / %button.btn.btn-primary.btn-block.btn-flat
        /   = link_to 'New User', new_user_registration_path, {:style=> "color: #f5f5f5;"}
    %footer.main-footer{style: "color: #ffbf1b"}
      %strong
        Copyright © #{Date.today.year}
        = succeed "." do
          %a{:href => 'http://www.mocrock.com/'} mocrock
      All rights reserved.
:css
  .btn-login{background-color: #f39c12;
    border-color: #f39c12;
    border-radius: 4px!important;}
  .login-page {
    background: #a20303!important;}
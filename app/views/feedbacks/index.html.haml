%section#about{:style=> "background: #f5f5f5"}
  .container-fluid
    / Title & Divider
    .row.wow.fadeInDown{:style => "visibility: visibles; animation-name: fadeInDown;"}
      .col-md-8.col-md-offset-2.text-center
        - if @feedbacks.present?
          %i
            %h2 Reviews
            %h3
              %a{"data-target" => "#login", "data-toggle" => "modal", :href => "#"} Submit Your Feedback
          .col-md-12.grid-contact
            - @feedbacks.each do |feedback|
              %hr
                %p{:style=>"color: red;"}= feedback.full_name
                %p= feedback.comment
        - else
          %i
            %h2{:style=>"color: red;"} Sorry reviews not available!!!
            %h3
              %a{"data-target" => "#login", "data-toggle" => "modal", :href => "#"} Submit Your Feedback

= form_for Feedback.new do |f|
  #login.modal{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
    .modal-dialog{:role => "document"}
      .modal-content
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4#myModalLabel.modal-title Your Feedback
        .modal-body
          %form
            .form-group
              %label Full Name
              = f.text_field :full_name, :placeholder => 'Full Name', :class => 'form-control', require: true
            .form-group
              %label Email
              = f.email_field :email, :placeholder => "Email", :class => 'form-control', require: true
            .form-group
              %label Mobile
              = f.number_field :mobile, :placeholder => "Email", :class => 'form-control', require: true
            .form-group
              %label Mobile
              = f.text_area :comment, :placeholder => "Comment", :class => 'form-control', require: true  
            .form-group
              %button.btn.btn-block.btn-checkout Submit